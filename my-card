<body>
    <div class="form-box">
        <h2>定制你的 3D 名片</h2>
        <input type="text" id="name" placeholder="输入你的名字">
        <input type="text" id="title" placeholder="输入你的职位 (如: UI设计师)">
        <textarea id="bio" placeholder="输入个人简介..." rows="3"></textarea>
        <input type="text" id="ig" placeholder="Instagram 用户名 (不带@)">
        <input type="text" id="wa" placeholder="WhatsApp 号码 (如: 60175998958)">
        <button onclick="make()">开始制作并跳转</button>
    </div>

    <script>
        function make() {
            // 抓取所有数据
            const data = {
                n: document.getElementById('name').value,
                t: document.getElementById('title').value,
                b: document.getElementById('bio').value,
                i: document.getElementById('ig').value,
                w: document.getElementById('wa').value
            };
            // 将数据变成网址参数
            const params = new URLSearchParams(data).toString();
            // 跳转到第二个页面
            window.location.href = "card.html?" + params;
        }
    </script>
